        format = "<span background='#a1d569'> Ó•Ö %free Free </span>"
}

ethernet enp4s0 {
        format_up = "<span background='#88c0d0'> Ó§Å %ip </span>"
        format_down = "<span background='#88c0d0'> Ó§Å Disconnected </span>"
}

wireless wlo1 {
        format_up = "<span background='#b48ead'> Ó§í %essid </span>"
        format_down = "<span background='#b48ead'> Ó§ë Disconnected </span>"
}

volume master {
        format = "<span background='#ebcb8b'> Ó§ï %volume </span>"
        format_muted = "<span background='#ebcb8b'> Ó§î Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 1 {
	last_full_capacity = true
        format = "<span background='#a3be8c'> Ó§ì %status: %percentage [%remaining] </span>"
        format_down = "No Battery"
        status_chr = "Charging"
        status_bat = "Battery"
        status_unk = "Unknown"
        status_full = "Charged"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
		format = "<span background='#81a1c1'> Ó§ß %a %-d %b %H:%M </span>"
