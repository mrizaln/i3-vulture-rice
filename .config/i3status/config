       format = "<span background='#34ebe5'> üñ´ %used </span>"
       threshold_degraded = "10%"
       format_degraded = "Free memory less than 10%: %free"
}

disk "/" {
        format = "<span background='#fec7cd'> Ó•á %free Free </span>"
}

